<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="6dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chapter"
            android:id="@+id/chapter"
            android:textSize="14sp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_below="@+id/chapter"
            android:textSize="24sp"
            android:id="@+id/Ctitle"
            android:textColor="#000"
            android:paddingLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:paddingRight="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dfdsfdsfsd fsdjf ksdjfkjkfjdsvf jjdkjfkd jdksfjsjfsfdsfdskjf fsdkfjdf"
            android:layout_below="@+id/Ctitle"
            android:textSize="14sp"
            android:id="@+id/content"
            android:textColor="#000"
            android:padding="16dp"
            android:visibility="gone"
           />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:id="@+id/goToCourseC"
            app:cardBackgroundColor="#4CAF50"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="8dp"


            >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/goToCourse"
            android:text="go to course"
            android:background="#4CAF50"
            android:textColor="#FFF"
            />
        </android.support.v7.widget.CardView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:padding="8dp"
            android:text="mark as complete"
            android:textColor="@color/red"
            android:layout_toRightOf="@+id/goToCourseC"
            android:background="@android:color/transparent"
            android:id="@+id/mark"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="15dp"
            android:id="@+id/imageMark"
            android:src="@drawable/completed"
            android:visibility="invisible"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>